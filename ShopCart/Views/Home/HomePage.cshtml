@model IEnumerable<ShopCart.tblProductDetail>
@{
    ViewBag.Title = "HomePage";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<style>
    .santa {
        position: fixed;
        bottom: 10px;
        right: -500px;
    }
    .card {
        height: 500px;
    }

    .card-image {
        overflow: auto;
        margin: auto;
        width: 60%;
        padding: 10px;
    }

    .size {
        overflow: auto;
        height: 300px;
        overflow: auto;
    }

    .title {
        line-height: 20px;
        height: 50px;
    }
</style>


<section class="content">

    <div class="row">
        @foreach (var item in Model)
        {<div class="col m4">
                <div class="card ">
                    <div class="card-image waves-effect waves-block waves-light">

                        <img class="activator" src="@item.imagePath">

                    </div>
                    <div class="card-content">
                        <div class="title">
                            <span class="card-title activator grey-text text-darken-4">@item.productName<i class="material-icons right">more_vert</i></span>
                        </div>
                        <h5>
                            Price: ₹@item.price
                        </h5>
                        <p><a href="#" class="waves-effect waves-light btn " onclick="AddToCart(@item.productId)"><i class="material-icons right">add</i>ADD TO CART</a></p>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">Description<i class="material-icons right">close</i></span>
                        <p>@item.description</p>
                    </div>
                </div>
            </div>

        }
    </div>
    <div class="santa"><img src="~/img/santa.gif" alt="" /></div>

</section>

